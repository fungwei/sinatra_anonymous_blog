<h1>Create New Post</h1>

<form role="form" action="/posts/create" method="post">
  <div class="form-group">
    <label for="inputTitle">Title</label>
    <input name="post[title]" type="text" class="form-control" id="inputTitle" placeholder="Enter title">
  </div>

  <div class="form-group">
    <label for="inputContent">Content</label>
    <textarea name="post[content]" class="form-control" id="inputContent" placeholder="Enter content" rows="8"></textarea>
  </div>

  <div class="form-group">
    <label for="inputTags">Tags</label>
    <input name="tags" type="text" class="form-control" id="inputTags" placeholder="Enter tags">
  </div>

  <button value="submit" class="btn btn-default">Create New Post</button>
</form>
