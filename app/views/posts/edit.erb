<h1>Update Post: <%= @post.title %></h1>

<form role="form" action="/posts/edit/<%= @post.id %>" method="post">
  <div class="form-group">
    <label for="inputTitle">Title</label>
    <input name="post[title]" type="text" class="form-control" id="inputTitle" value="<%= @post.title %>">
  </div>

  <div class="form-group">
    <label for="inputContent">Content</label>
    <textarea name="post[content]" class="form-control" id="inputContent" rows="8"><%= @post.content %></textarea>
  </div>

  <div class="form-group">
    <label for="inputTags">Tags</label>
    <input name="tags" type="text" class="form-control" id="inputTags" value="<%= @tag_string %>">
  </div>

  <button value="submit" class="btn btn-default">Update Post</button>
</form>